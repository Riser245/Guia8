<Window x:Class="GestionUsuarios.FrmUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionUsuarios"
        mc:Ignorable="d"
        Title="Usuario" Height="395" Width="414" WindowStartupLocation="CenterScreen">


    <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Width="372" Height="372" Margin="21,10,0,0">
        <Label Name="lblTitulo1" Content="Datos de Usuario" HorizontalAlignment="Center" 
           Margin="0,21,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.538,0.32" 
           FontSize="20" FontWeight="UltraBlack"/>
        <Label Name="lblNombre1" Content="Nombre:" HorizontalAlignment="Left" 
           Margin="29,97,0,0" VerticalAlignment="Top"/>
        <Label Name="lblApellido1" Content="Apellido:" HorizontalAlignment="Left" 
           Margin="29,169,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.099,0.526"/>
        <Label Name="lblEmail1" Content="Email:" HorizontalAlignment="Left" 
           Margin="37,211,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.09,2.56"/>
        <Label Name="lblPais1" Content="País:" HorizontalAlignment="Left" 
           Margin="41,283,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.883,-0.631"/>

        <TextBox x:Name="txtNombre1" HorizontalAlignment="Left" Margin="120,101,0,0" 
             TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Background="#FFEBEBFE"/>
        <TextBox x:Name="txtApellido1" HorizontalAlignment="Left" Margin="120,173,0,0" 
             TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Background="#FFEBEBFE"/>
        <TextBox x:Name="txtEmail1" HorizontalAlignment="Left" Margin="120,218,0,0" 
             TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Background="#FFEBEBFE" Height="21"/>
        <TextBox x:Name="txtPais1" HorizontalAlignment="Left" Margin="120,287,0,0" 
             TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Background="#FFEBEBFE"/>

        <Button x:Name="btnRegistrar" HorizontalAlignment="Left" Margin="294,113,0,0" 
            VerticalAlignment="Top" RenderTransformOrigin="1.44,0.64" 
            Click="btnRegistrar_Click" Height="65" Width="50">
            <StackPanel>
                <Image Source="/imgs/guardar.png" Height="44" Width="34"/>
                <TextBlock><Run Text="Guardar"/></TextBlock>
            </StackPanel>
        </Button>
    </Grid>
</Window>
